<h1>餐廳後台</h1>

<a href='/admin/restaurants/'>
  <button type="button" class="btn btn-primary">Manage Restaurant</button>
</a>
<a href='/admin/users/'>
  <button type="button" class="btn btn-primary">Manage Users</button>
</a>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">User name</th>
      <th scope="col">E-mail</th>
      <th scope="col">Role</th>
      <th scope="col">Set permission</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      {{#if this.isAdmin}}
      <td>Admin</td>
      {{else}}
      <td>User</td>
      {{/if}}
      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/users/{{this.id}}/permission">
            {{#if this.isAdmin}}
            Set as user
            {{else}}
            Set as admin
            {{/if}}
          </a>
        </button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>